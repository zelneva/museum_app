<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <android.support.design.button.MaterialButton
        android:id="@+id/new_photo"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        app:backgroundTint="#00000000"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Загрузить фото"
        app:cornerRadius="18dp"
        app:rippleColor="@color/colorAccent"
        app:strokeColor="@color/darkGrey"
        app:strokeWidth="1dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_author_born"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/author_born_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Год рождения автора" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_author_dead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/author_dead_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Год смерти автора, если умер" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите язык и добавьте информацию об авторе"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:paddingTop="10dp">

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_rus"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:text="@string/ru_lang"
            android:textAlignment="center"
            android:textColor="@drawable/button_text_color"
            android:textSize="12sp"
            app:backgroundTint="#00000000"
            app:cornerRadius="18dp"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/darkGrey"
            app:strokeWidth="1dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_eng"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:text="@string/en_lang"
            android:textAlignment="center"
            android:textColor="@drawable/button_text_color"
            android:textSize="12sp"
            app:backgroundTint="#00000000"
            app:cornerRadius="18dp"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/darkGrey"
            app:strokeWidth="1dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_ger"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:text="@string/ger_lang"
            android:textAlignment="center"
            android:textColor="@drawable/button_text_color"
            android:textSize="12sp"
            app:backgroundTint="#00000000"
            app:cornerRadius="18dp"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/darkGrey"
            app:strokeWidth="1dp" />

    </LinearLayout>

</LinearLayout>