<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/museum_image"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:src="@drawable/wide_sml"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/museum_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/museum_image"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="6dp"
                android:text="Национальный музей культуры"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/museum_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/museum_name"
                android:layout_above="@+id/museum_status"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical|start"
                android:text="Москва ул.Ленина 1"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>