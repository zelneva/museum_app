<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/admin_museum_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/cleveland_museum" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/line"
            android:shrinkColumns="*">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="?android:colorBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/admin_museum_title"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:text="Название музея"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/admin_museum_address"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="Адрес музея"
                        android:textColor="@color/black"
                        android:textSize="17sp" />
                </LinearLayout>
            </TableRow>


            <TableRow
                android:layout_height="40dp"
                android:paddingTop="10dp"
                android:background="?android:colorBackground"
                android:baselineAligned="false">

                <android.support.design.button.MaterialButton
                    android:id="@+id/admin_museum_exhibition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/show_exhibitions"
                    android:textColor="@drawable/button_text_color"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    app:backgroundTint="#00000000"
                    app:cornerRadius="18dp"
                    app:rippleColor="@color/colorAccent"
                    app:strokeColor="@color/darkGrey"
                    app:strokeWidth="1dp" />

            </TableRow>

            <TableRow
                android:layout_height="40dp"
                android:background="?android:colorBackground"
                android:baselineAligned="false">

                <android.support.design.button.MaterialButton
                    android:id="@+id/admin_museum_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/museum_info_edit"
                    android:textColor="@drawable/button_text_color"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    app:backgroundTint="#00000000"
                    app:cornerRadius="18dp"
                    app:rippleColor="@color/colorAccent"
                    app:strokeColor="@color/darkGrey"
                    app:strokeWidth="1dp" />
            </TableRow>

            <TableRow
                android:layout_height="40dp"
                android:background="?android:colorBackground"
                android:baselineAligned="false">

                <android.support.design.button.MaterialButton
                    android:id="@+id/admin_museum_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/museum_delete"
                    android:textColor="@drawable/button_text_color"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    app:backgroundTint="#00000000"
                    app:cornerRadius="18dp"
                    app:rippleColor="@color/colorAccent"
                    app:strokeColor="@color/darkGrey"
                    app:strokeWidth="1dp" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>