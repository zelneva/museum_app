<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/new_exhibition_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/name_exh_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Название выставки" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/start_day_exhibition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:layout_weight="2"
            android:hint="Начало выставки" />

        <Button
            android:id="@+id/select_start_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Выбрать"
            android:background="@color/colorAccent"
            android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/finish_day_exhibition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_finish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:layout_weight="2"
                android:hint="Конец выставки" />

            <Button
                android:id="@+id/select_finish_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Выбрать"
                android:background="@color/colorAccent"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.design.widget.TextInputLayout>


</LinearLayout>