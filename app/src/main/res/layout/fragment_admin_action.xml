<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.account.AdminFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingBottom="20dp"
        android:text="@string/admin_action"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:gravity ="center"
        android:paddingTop="50dp"
        android:orientation="vertical">

        <android.support.design.button.MaterialButton
            android:id="@+id/admin_museum"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:padding="10dp"
            android:text="@string/admin_museum"
            android:textColor="@drawable/button_text_color"
            app:backgroundTint="#00000000"
            app:cornerRadius="18dp"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/darkGrey"
            app:strokeWidth="1dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/admin_showpiece"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:padding="10dp"
            android:text="@string/admin_showpieces"
            android:textColor="@drawable/button_text_color"
            app:backgroundTint="#00000000"
            app:cornerRadius="18dp"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/darkGrey"
            app:strokeWidth="1dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/admin_author"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:padding="10dp"
            android:text="@string/admin_authors"
            android:textColor="@drawable/button_text_color"
            app:backgroundTint="#00000000"
            app:cornerRadius="18dp"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/darkGrey"
            app:strokeWidth="1dp" />

        <android.support.design.button.MaterialButton
            android:id="@+id/admin_nfc"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:padding="10dp"
            android:text="Управление метками"
            android:textColor="@drawable/button_text_color"
            app:backgroundTint="#00000000"
            app:cornerRadius="18dp"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/darkGrey"
            app:strokeWidth="1dp" />
    </LinearLayout>

</FrameLayout>